<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoPnp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logo_pnp" />

        <TextView
            android:id="@+id/txtPnp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoPnp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:padding="3dp"
            android:text="Selamat Datang di Politeknik Negeri Padang"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPnp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="3dp"
        android:text="Limau Manih, Padang, Sumbar"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/btnMi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="Manajemen Informatika" />

        <Button
            android:id="@+id/btnTekom"
            android:layout_below="@+id/btnMi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="Teknik Komputer" />

        <Button
            android:id="@+id/btnGaleri"
            android:layout_below="@+id/btnTekom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="Galeri Photo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

